<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |@topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag @topic.image.url %>
            <ul class = "topic_idx_bar">
              <% if topic.comment_users.include?(current_user) %>
                <li>
                  <%= link_to comments_path(topic_id: @topic.id), method: :delete do %>
                   <%= image_tag '/images/icons/topic_comment.png', class: 'topic-index-icon', alt: "コメント" %>
                   <%#= image_tag '/images/icons/topic_comment.png', alt: "コメント" %>
                  <% end %>
                </li>
              <% else %>
                <li>
                  <% if !topic.comment_users.include?(current_user) %>
                    <%= link_to comments_path(topic_id: @topic.id), method: :post do %>
                     <%= image_tag '/images/icons/topic_comment.png', class: 'topic-index-icon', alt: "コメント" %>
                      <%#= image_tag '/images/icons/topic_comment.png', alt: "コメント" %>
                    <% end %>
                  <% end %>
                </li>
              <% end %>
              <li>
                <%= sprintf("%-7d", topic.comment_users.count).gsub(/ /, '&nbsp;').html_safe %>
              </li>
              <li>
                <%= link_to comments_path + '?topic_id=' + topic.id.to_s do %>
                   <%= image_tag '/images/icons/comment.png', class: 'topic-index-icon', alt: "投稿" %>
                <% end %>
              </li>
            </ul>
            <p class="topic-text">
              <%= topic.user.name + '：' + topic.description %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
